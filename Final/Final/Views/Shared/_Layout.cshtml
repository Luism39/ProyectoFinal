<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .my_navbar {
            overflow: hidden;
        }

        /*.my_navbar a {
            float: left;
            font-size: 16px;
            color: white;
            text-align: center;
            padding: 14px 6px;
            text-decoration: none;
        }*/

        .my_dropdown {
            float: left;
            overflow: hidden;
        }

        .my_dropdown .my_dropbtn {
            font-size: 16px;
            border: none;
            outline: none;
            color: darkgray;
            padding: 14px 16px;
            background-color: inherit;
            font-family: inherit;
            margin: 0;
        }

        .my_navbar a:hover, .my_dropdown:hover .my_dropbtn {
            color:white;
        }

        .my_dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 100px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        }

        .my_dropdown-content a {
            float: none;
            color: black;
            padding: 5px 8px;
            text-decoration: none;
            display: block;
            text-align: left;
        }

        .my_dropdown-content a:hover {
            background-color: #ddd;
        }

        .my_dropdown:hover .my_dropdown-content {
            display: block;
        }

    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Recursos Humanos", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
           
            <div class="navbar-collapse collapse">
                <div class="my_dropdown">
                    <button class="my_dropbtn">
                        Mantenimientos
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="my_dropdown-content">
                        <a>@Html.ActionLink("Empleados", "Index", "Empleados")</a>
                        <a>@Html.ActionLink("Departamentos", "Index", "Departamentos")</a>
                        <a>@Html.ActionLink("Cargos", "Index", "Cargos")</a>
                    </div>
                </div>
                <div class="my_dropdown">
                    <button class="my_dropbtn">
                        Procesos
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="my_dropdown-content">
                        <a>@Html.ActionLink("Nominas", "Index", "Nominas")</a>
                        <a>@Html.ActionLink("Salida de Empleados", "Index", "SalidaEmpleados")</a>
                        <a>@Html.ActionLink("Licencias", "Index", "Licencias")</a>
                        <a>@Html.ActionLink("Permisos", "Index", "Permisos")</a>
                        <a>@Html.ActionLink("Vacaciones", "Create", "Vacaciones")</a>
                    </div>
                </div>

                <div class="my_dropdown">
                    <button class="my_dropbtn">
                        About
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="my_dropdown-content">
                        <a>@Html.ActionLink("Desarrolladores", "Contact", "Home")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Aplicación de gestión de recursos humanos</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
